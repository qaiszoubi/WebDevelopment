@model Hotel_Reservation_System.Models.Hotel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Hotel</h1>

<h4>Hotel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <!-- Added enctype -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Hotelid" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Numberofrooms" class="control-label"></label>
                <input asp-for="Numberofrooms" class="form-control" />
                <span asp-validation-for="Numberofrooms" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea> <!-- Changed to textarea for better input -->
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" /> <!-- Set input type to file -->
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <!-- Display the current image if exists -->
            @if (!string.IsNullOrEmpty(Model.Imagepath))
            {
                <div class="form-group">
                    <label>Current Image:</label>
                    <div>
                        <img src="~/image/@Model.Imagepath" alt="Current Image" class="img-thumbnail" style="max-width: 200px;" />
                    </div>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
